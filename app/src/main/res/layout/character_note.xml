<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chara_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/chara_name_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorCharaNote"
        android:text="Konrad: "
        android:textSize="@dimen/text_size_chara_name_note"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chara_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorCharaNote"
            android:paddingLeft="10dp"
            android:paddingRight="40dp"
            android:textSize="@dimen/text_size_chara_note"
            android:text="Tante note. Tantissime note"/>

        <Button
            android:id="@+id/clear_child"
            android:layout_width="@dimen/clear_white_size"
            android:layout_height="@dimen/clear_white_size"
            android:layout_marginRight="10dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/ic_clear_white" />

    </FrameLayout>


</LinearLayout>


